<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragments.AddClientFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="Add client"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/ic_recycler_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:layout_margin="8dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="Last Name"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/white"
            android:background="@drawable/ic_btn_bck"
            android:gravity="center"
            android:hint="last name"
            android:padding="12dp"
            android:textSize="25sp"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:layout_margin="8dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="First Name"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/white"
            android:background="@drawable/ic_btn_bck"
            android:gravity="center"
            android:hint="first name"
            android:padding="12dp"
            android:textSize="25sp"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="Arrival Date"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_arrival_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/white"
            android:background="@drawable/ic_btn_bck"
            android:gravity="center"
            android:hint="arrival date"
            android:padding="12dp"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="Amount Of Days"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_amount_of_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/white"
            android:background="@drawable/ic_btn_bck"
            android:gravity="center"
            android:hint="amount of days"
            android:padding="12dp"
            android:textSize="25sp"
            android:textStyle="italic" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:padding="12dp"
            android:text=" add "
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/ic_btn_bck"/>
    </LinearLayout>

</LinearLayout>